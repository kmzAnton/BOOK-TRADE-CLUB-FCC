<button class="p-2"  data-toggle="modal" data-target="#exampleModalLogin"><i class="fa fa-lg fa-sign-in-alt"></i>    Log in</button>
<!-- Modal Log in-->
<div class="modal fade" id="exampleModalLogin" tabindex="-2" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLoginLabel">Log in form</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form method="post" action="/login">
          <div class="form-group">
            <label for="exampleInputUserLogin">Username</label>
            <input autofocus type="text" name="username" class="form-control" id="exampleInputUserLogin" aria-describedby="emailHelp" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="exampleInputPasswordLogin">Password</label>
            <input type="password" name="password" class="form-control" id="exampleInputPasswordLogin" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-info">Submit</button>
        </form>

      </div>
    </div>
  </div>
</div>